<!DOCTYPE html>
<html>
<%- include('header.ejs') %>
<body>
	<%- include('navbar.ejs') %>
	<div class = 'container pt-70 animated fadeInDown'>

		<br>
		<h1 class = 'align-center pb-10 pt-50' style="text-shadow: 3px 3px 0px rgba(0,0,0,0.2);">Control de Vehículos</h1>
		<h2 class = 'align-center'>Nuevo Usuario</h2>

		<div class = 'row pt-10'>
			<div class = 'col-md-offset-3 col-md-6'>
				<% if (typeof message !== 'undefined') { %>
					<% if (message === 'Usuario creado exitosamente') { %>
						<div class="successalert">
							<span class="closebtn" onclick="this.parentElement.style.display='none'; window.location = window.location.pathname;">&times;</span>
							<strong></strong> <%= message %>
						</div>
					<% } else { %>
						<div class="warningalert animated zoomIn">
							<span class="closebtn" onclick="this.parentElement.style.display='none'; window.location = window.location.pathname;">&times;</span>
							<strong></strong> <%= message %>
						</div>
					<% } %>
				<% } %>
				<div>
					<form action="/user" method="post" class="form-horizontal bs-component">
						<div class="form-group label-floating">
							<label for="username" class="control-label">Email</label>
							<input type="text" class="form-control" id="username" name="username" required>
						</div>
						<div class="form-group label-floating">
							<label for="password" class="control-label">Contraseña</label>
							<input type="password" class="form-control" id="password" name ="password" required>
						</div>
						<div class="form-group align-center">
							<button type="submit" class="btn btn-raised btn-primary">Guardar</button>
						</div>
					</form>
				</div>
			</div>

		</div>

	</div>
	<%- include('footer.ejs') %>

</body>
</html>